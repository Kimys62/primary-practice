{{>layouts/header}}

<form class="container" action="/articles/create" method="post">
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title"><!-- name에 변수명 입력해야 값을 받아옴 -->
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="content"></textarea><!-- name에 변수명 입력해야 값을 받아옴 -->

    </div>

    <button type="submit" class="btn btn-primary">제출</button>
    <a href="/articles">back</a>
</form>

{{>layouts/footer}}